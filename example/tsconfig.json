{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": [
    "env.d.ts",
    "tailwind.config.ts",
    "vite.config.ts",
    "wrangler.ts",
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": [
      "@cloudflare/workers-types",
      "@jacob-ebey/hono-server-components/modules",
      "dom-navigation",
      "vite/client"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  }
}
